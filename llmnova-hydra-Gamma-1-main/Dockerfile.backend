FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including those for Playwright
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install gunicorn

# Install Playwright browsers
RUN playwright install --with-deps

# Copy Backend Code
COPY gamma_engine ./gamma_engine
COPY backend ./backend
COPY gamma_server.py .

# Healthcheck to verify system status endpoint
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/api/system/status || exit 1

# Use Gunicorn with Uvicorn workers for production
CMD ["gunicorn", "gamma_server:app", "--workers", "4", "--worker-class", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]
